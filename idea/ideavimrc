let mapleader = " "
inoremap jk <ESC>
inoremap hh <ESC>
set surround
set multiple-cursors
set commentary
set easymotion
set argtextobj
set ReplaceWithRegister

set nu
set rnu
set clipboard+=ideaput
set idearefactormode=visual
set showmode
set incsearch
set hlsearch
set ignorecase
set smartcase

" intellij commands
nmap <leader>pp :action ManageRecentProjects<cr>

nmap <leader>pf :action GotoFile<cr>
nmap <leader>pc :action GotoClass<cr>
nmap <leader>bl :action RecentFiles<cr>
