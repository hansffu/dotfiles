:: default : chunkc border::color 0xff6f5bab
:: switcher @ : chunkc border::color 0xfffc8617
:: swap @ : chunkc border::color 0xff7dfdee
:: tree @ : chunkc border::color 0xfffc3052
:: monitor @ : chunkc border::color 0xfffc3052
:: layout @ : chunkc border::color 0xfffdec5a

# switching modes
default                       < ctrl - q      ; switcher
switcher, swap, layout, tree, monitor   < ctrl - q      ; default
switcher, swap, layout, tree, monitor   < escape        ; default
switcher, swap, layout, tree, monitor   < return        ; default


# switcher mode

## switch modes
switcher < s ; swap
switcher < a ; layout
switcher < t ; tree
switcher < m ; monitor
swap < s ; switcher
layout < a ; switcher

#switch mode

# Switch window
switcher < h : chunkc tiling::window --focus west
switcher < j : chunkc tiling::window --focus south
switcher < k : chunkc tiling::window --focus north
switcher < l : chunkc tiling::window --focus east
switcher < b : chunkc tiling::window --focus prev
switcher < n : chunkc tiling::window --focus next

# Switch desktop
cmd + alt - x : chunkc tiling::desktop --focus $(chunkc get _last_active_desktop)
ctrl + alt - p : chunkc tiling::desktop --focus prev
ctrl + alt - n : chunkc tiling::desktop --focus next
switcher < 1 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 1) ; skhd -k 'escape'
switcher < 2 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 2) ; skhd -k 'escape'
switcher < 3 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 3) ; skhd -k 'escape'
switcher < 4 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 4) ; skhd -k 'escape'
switcher < 5 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 5) ; skhd -k 'escape'
switcher < 6 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 6) ; skhd -k 'escape'
switcher < 7 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 7) ; skhd -k 'escape'
switcher < 8 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 8) ; skhd -k 'escape'
switcher < 9 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 9) ; skhd -k 'escape'

# Move window to desktop
switcher < shift - 1 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 1)
switcher < shift - 2 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 2)
switcher < shift - 3 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 3)
switcher < shift - 4 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 4)
switcher < shift - 5 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 5)
switcher < shift - 6 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 6)
switcher < shift - 7 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 7)
switcher < shift - 8 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 8)
switcher < shift - 9 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 9)

# Switch monitor
monitor < 1  : chunkc tiling::monitor -f 1 ; skhd -k 'escape'
monitor < 2  : chunkc tiling::monitor -f 2 ; skhd -k 'escape'
monitor < 3  : chunkc tiling::monitor -f 3 ; skhd -k 'escape'

# Move window to monitor
monitor < shift - 1  : chunkc tiling::window --send-to-monitor 1
monitor < shift - 2  : chunkc tiling::window --send-to-monitor 2
monitor < shift - 3  : chunkc tiling::window --send-to-monitor 3


## Swap mode

# move window
swap < h : chunkc tiling::window --warp west
swap < j : chunkc tiling::window --warp south
swap < k : chunkc tiling::window --warp north
swap < l : chunkc tiling::window --warp east

# swap window positions
swap < shift - h : chunkc tiling::window --swap west
swap < shift - j : chunkc tiling::window --swap south
swap < shift - k : chunkc tiling::window --swap north
swap < shift - l : chunkc tiling::window --swap east

# mirror tree y-axis
swap < y : chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
swap < x : chunkc tiling::desktop --mirror horizontal


# layout mode
## change desktop layout
layout < t : chunkc tiling::desktop --layout bsp
layout < m : chunkc tiling::desktop --layout monocle

## toggle desktop offset
layout < o : chunkc tiling::desktop --toggle offset

## adjust desktop padding
layout < p         : chunkc tiling::desktop --padding inc
layout < shift - p : chunkc tiling::desktop --padding dec

## adjust window gap
layout < g         : chunkc tiling::desktop --gap inc
layout < shift - g : chunkc tiling::desktop --gap dec


# tree mode
tree < f                :   chunkc tiling::window --toggle fullscreen
tree < shift - f        :   chunkc tiling::window --toggle native-fullscreen
tree < d                :   chunkc tiling::window --toggle parent
tree < w                :   chunkc tiling::window --toggle float
tree < r                :   chunkc tiling::desktop --rotate 270
tree < s                :   chunkc tiling::window --toggle split

## adjust window size
tree < h                :   chunkc tiling::window --use-temporary-ratio 0.02 --adjust-window-edge west
tree < j                :   chunkc tiling::window --use-temporary-ratio 0.02 --adjust-window-edge south
tree < k                :   chunkc tiling::window --use-temporary-ratio 0.02 --adjust-window-edge north
tree < l                :   chunkc tiling::window --use-temporary-ratio 0.02 --adjust-window-edge east

tree < shift - h        :   chunkc tiling::window --use-temporary-ratio -0.02 --adjust-window-edge west
tree < shift - j        :   chunkc tiling::window --use-temporary-ratio -0.02 --adjust-window-edge south
tree < shift - k        :   chunkc tiling::window --use-temporary-ratio -0.02 --adjust-window-edge north
tree < shift - l        :   chunkc tiling::window --use-temporary-ratio -0.02 --adjust-window-edge east

## equalize window size
tree < e                :   chunkc tiling::desktop --equalize


# change layout of desktop
alt - e : chunkc tiling::desktop --layout bsp
alt - s : chunkc tiling::desktop --layout float
alt - m : chunkc tiling::desktop --layout monocle

# kill focused window
shift + alt - q : chunkc tiling::window --close


# make floating window fill screen
shift + alt - w : chunkc tiling::window --grid-layout 1:1:0:0:1:1

# make floating window fill left-half of screen
shift + alt - a : chunkc tiling::window --grid-layout 1:2:0:0:1:1

# make floating window fill right-half of screen
shift + alt - d : chunkc tiling::window --grid-layout 1:2:1:0:1:1


# Open terminal
alt - return : open -na /Applications/iTerm.app


