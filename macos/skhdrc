# enter fullscreen mode for the focused container
alt - f : chunkc tiling::window --toggle fullscreen

# change focus between tiling / floating windows
shift + alt - space : chunkc tiling::window --toggle float

# change layout of desktop
alt - e : chunkc tiling::desktop --layout bsp
alt - s : chunkc tiling::desktop --layout float
alt - m : chunkc tiling::desktop --layout monocle

# kill focused window
shift + alt - q : chunkc tiling::window --close

# change focus
alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

alt - p : chunkc tiling::window --focus prev
alt - n : chunkc tiling::window --focus next

# move focused window
shift + alt - h : chunkc tiling::window --warp west
shift + alt - j : chunkc tiling::window --warp south
shift + alt - k : chunkc tiling::window --warp north
shift + alt - l : chunkc tiling::window --warp east

# rotate tree
alt - r : chunkc tiling::desktop --rotate 90

# mirror tree y-axis
alt - y : chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
alt - x : chunkc tiling::desktop --mirror horizontal


# make floating window fill screen
shift + alt - w : chunkc tiling::window --grid-layout 1:1:0:0:1:1

# make floating window fill left-half of screen
shift + alt - a : chunkc tiling::window --grid-layout 1:2:0:0:1:1

# make floating window fill right-half of screen
shift + alt - d : chunkc tiling::window --grid-layout 1:2:1:0:1:1

# Move to desktop
cmd + alt - x : chunkc tiling::desktop --focus $(chunkc get _last_active_desktop)
ctrl + alt - p : chunkc tiling::desktop --focus prev
ctrl + alt - n : chunkc tiling::desktop --focus next
alt - 1 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 1)
alt - 2 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 2)
alt - 3 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 3)
alt - 4 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 4)
alt - 5 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 5)
alt - 6 : chunkc tiling::desktop --focus $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 6)

# move focused container to workspace
shift + alt - 1 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 1)
shift + alt - 2 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 2)
shift + alt - 3 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 3)
shift + alt - 4 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 4)
shift + alt - 5 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 5)
shift + alt - 6 : chunkc tiling::window --send-to-desktop $($HOME/.dotfiles/macos/scripts/cwm_get_absolute_desktop_id_from_monitor_id 6)

# Change monitor
cmd + alt - z  : chunkc tiling::monitor -f prev
cmd + alt - c  : chunkc tiling::monitor -f next
cmd + alt - 1  : chunkc tiling::monitor -f 1
cmd + alt - 2  : chunkc tiling::monitor -f 2
cmd + alt - 3  : chunkc tiling::monitor -f 3
cmd + alt - h  : chunkc tiling::window --send-to-monitor prev
cmd + alt - l  : chunkc tiling::window --send-to-monitor next
cmd - 1  : chunkc tiling::monitor -f 1
cmd - 2  : chunkc tiling::monitor -f 2
cmd - 3  : chunkc tiling::monitor -f 3
cmd + shift - 1  : chunkc tiling::window --send-to-monitor 1
cmd + shift - 2  : chunkc tiling::window --send-to-monitor 2
cmd + shift - 3  : chunkc tiling::window --send-to-monitor 3

# Open terminal
alt - return : open -na /Applications/iTerm.app

# change region size
ctrl + alt - j : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
ctrl + alt - k : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
ctrl + alt - l : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east
ctrl + alt - h : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

ctrl + alt + shift - j : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
ctrl + alt + shift - k : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
ctrl + alt + shift - l : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
ctrl + alt + shift - h : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west

cmd + ctrl + alt + shift - m : chunkc core::load ffm.so
cmd + ctrl + alt - m : chunkc core::unload ffm.so

