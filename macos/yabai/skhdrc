:: default : yabai -m config active_window_border_color 0xff6f5bab
:: switcher @ : yabai -m config active_window_border_color 0xfffc8617
:: swap @ : yabai -m config active_window_border_color 0xff7dfdee
:: window @ : yabai -m config active_window_border_color 0xfffc3052
:: monitor @ : yabai -m config active_window_border_color 0xfffc3052
:: layout @ : yabai -m config active_window_border_color 0xfffdec5a
:: insertW @ : yabai -m config active_window_border_color 0xff22ee22

# switching modes
default                       < ctrl - q      ; switcher
switcher, swap, layout, window, monitor, insertW   < ctrl - q      ; default
switcher, swap, layout, window, monitor, insertW   < escape        ; default
switcher, swap, layout, window, monitor, insertW   < return        ; default
switcher, swap, layout, window, monitor, insertW   < space        ; default


# switcher mode

## switch modes
switcher < s ; swap
swap < s ; switcher

switcher < a ; layout
layout < a ; switcher

switcher < w ; window
window < w ; switcher

switcher < m ; monitor
monitor < m ; switcher

switcher < i ; insertW
insertW < i ; switcher


#switch mode

# Switch window
switcher < h : yabai -m window --focus west
switcher < j : yabai -m window --focus south
switcher < k : yabai -m window --focus north
switcher < l : yabai -m window --focus east
switcher < b : yabai -m window --focus prev
switcher < n : yabai -m window --focus next

# Switch desktop
switcher < 1 : yabai -m space --focus 1
switcher < 2 : yabai -m space --focus 2
switcher < 3 : yabai -m space --focus 3
switcher < 4 : yabai -m space --focus 4
switcher < 5 : yabai -m space --focus 5
switcher < 6 : yabai -m space --focus 6
switcher < 7 : yabai -m space --focus 7
switcher < 8 : yabai -m space --focus 8
switcher < 9 : yabai -m space --focus 9

